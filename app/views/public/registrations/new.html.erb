<div class="row justify-content-center">
  <div class="col-9 ">

    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class"field">
          <div class="row ">
            <div class="col">
              <%= f.label :名前 %>
            </div>

            <div class="col-4 text-right">
              <%= f.label :姓 %>
              <%= f.text_field :last_name %>
            </div>

            <div class="col text-right">
              <%= f.label :名 %>
              <%= f.text_field :first_name %>
            </div>

          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
              <%= f.label :フリガナ %>
            </div>

            <div class="col-4 text-right">
              <%= f.label :セイ %>
              <%= f.text_field :last_name_kana %>
            </div>

            <div class="col text-right">
              <%= f.label :メイ %>
              <%= f.text_field :first_name_kana %>
            </div>

          </div>
        </div>


        <div class"field">
          <div class="row ">
            <div class="col">
              <%= f.label :メールアドレス %><br />
            </div>

            <div class="col-4 text-right">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="col">
            </div>



          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
            <%= f.label :郵便番号 %>
            </div>

            <div class="col-4 text-right">
            <%= f.text_field :postal_code %>
            </div>

            <div class="col">
            </div>

          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
            <%= f.label :住所 %>
            </div>

            <div class="col-4 text-right">
            <%= f.text_field :address %>
            </div>

            <div class="col">
            </div>

          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
            <%= f.label :電話番号 %>
            </div>

            <div class="col-4 text-right">
            <%= f.text_field :telephone_number %>
            </div>


            <div class="col">
            </div>

          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
              <%= f.label :パスワード %>
            </div>

            <div class="col-4 text-right">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>


            <div class="col">
            </div>

          </div>
        </div>

        <div class"field">
          <div class="row ">
            <div class="col">
              <%= f.label :パスワード %>
            </div>

            <div class="col-4 text-right">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>


            <div class="col">
            </div>

          </div>
        </div>

        <div class"action">
          <div class="row ">
            <div class="col text-center">
              <%= f.submit "新規登録", class:"btn btn-success" %>
            </div>

          </div>
        </div>
          <% end %>

          <h1>既に登録済みの方</h1>

        <div class="form-group">
          <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
        </div>

  </div>


</div>