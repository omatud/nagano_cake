<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>


    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>

    <%= f.label :住所 %>
    <%= f.text_field :address %>

    <%= f.label :宛名 %>
    <%= f.text_field :name %>
    <%= f.submit"新規登録" %>

<% end %>

