<div class="container">
    
  <h1>配送先登録/一覧</h1>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>

    <div class="row">
        <div class="col">
            <%= f.label :郵便番号 %>
        </div>
        <div class="col-9 text-left">
            <%= f.text_field :postal_code %>
        </div>
        
    </div>
    <div class="row">
        <div class="col">
            <%= f.label :住所 %>
        </div>
        <div class="col-9 text-left">
            <%= f.text_field :address %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <%= f.label :宛名 %>
        </div>
        <div class="col-5 text-left">
            <%= f.text_field :name %>
        </div>
        <div class="col-4">
            <%= f.submit"新規登録" %>
        </div>
    </div>
    <% end %>
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>郵便番号</th>
                        <th>住所</th>
                        <th>宛名</th>
                        <th></th>
                    </tr>
                </thead>
                
                <% @addresses.each do |address| %>
                
                <tbody>
                    <tr>
                        <td><%= address.postal_code %></td>
                        <td><%= address.address %></td>
                        <td><%= address.name %></td>
                        <td>
                            <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
                            <%= link_to "削除する", address_path(address.id), method: :delete,"data-confirm" => "本当に消しますか？", class:"btn btn-danger" %>
                        </td>
                    </tr>
                </tbody>
                
                <% end %>
                
            </table>
        </div>
    </div>
</div>
