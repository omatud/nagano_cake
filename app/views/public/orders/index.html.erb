<div class="container">
  
  <h1>注文履歴一覧</h1>
  
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>注文日</th>
                  <th>配送先</th>
                  <th>注文商品</th>
                  <th>支払い金額</th>
                  <th>注文詳細</th>
                </tr>
              </thead>
              
              <% @order_histories.each do |order_history| %>

              <tbody>
                <tr>
                  <td>
                      <%= order_history.created_at %>
                  </td>
                  <td>
                    〒<%= order_history.postal_code %>
                      <%= order_history.address %>
                      <%= order_history.name %>
                  </td>
                  
                  <% order_history.order_history_details.each  do |order_history_detail|%>
                  
                  <td>
                      <%= order_history_detail.item.name %>
                  </td>
                  
                  <% end %>
                  
                  <td>
                      <%= order_history.total_payment %>
                  </td>

                  <td>
                      <%= link_to "表示する", order_path(order_history.id), class:"btn btn-primary" %>
                  </td>
                </tr>
              </tbody>
              
              <% end %>
              
            </table>

        </div>
    </div>
</div>

