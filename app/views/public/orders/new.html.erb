
<div class="container">
  <h1>注文情報入力</h1>
  <%= form_with model: @order_history, url: orders_confirm_path do |f| %>
  支払方法
  <div class="row justify-content-center">
    <div class="col",style="padding-left:100px">
      <%= f.radio_button :payment_method, OrderHistory.payment_methods.key(0) %>
      <%= f.label :クレジットカード, OrderHistory.payment_methods_i18n[:クレジットカード] %>

      <%= f.radio_button :payment_method, OrderHistory.payment_methods.key(1) %>
      <%= f.label :銀行振込, OrderHistory.payment_methods_i18n[:銀行振込]%>
    </div>
  </div>
  お届け先
  <div class="row justify-content-center">
    <div class="col">
      <%= f.radio_button :select_address,"0" %>ご自身の住所<br>
      〒<%= current_customer.postal_code %>
        <%= current_customer.address %><br>
        <%= current_customer.last_name %>
        <%= current_customer.first_name %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col">
      <%= f.radio_button :select_address,"1" %>登録済住所から選択<br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col">
      <%= f.radio_button :select_address,"2" %>新しいお届け先<br>
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %><br>

      <%= f.label :住所 %>
      <%= f.text_field :address %><br>

      <%= f.label :宛名 %>
      <%= f.text_field :name %><br>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col text-center">
      <%= f.submit '確認画面に進む' %>
    </div>
  </div>
  <% end %>

</div>
