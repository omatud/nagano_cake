
<div class="container">
  
  <h1>商品編集</h1>

  <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
  
  <div class="row">
    <div class="col text-center">
      商品画像
    </div>
    <div class="col">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      商品名
    </div>
    <div class="col">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      商品説明
    </div>
    <div class="col">
      <%= f.text_area :introduction %>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      ジャンル
    </div>
    <div class="col">
      <%= f.collection_select(:genre_id, @genres, :id, :name) %>
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      税抜価格
    </div>
    <div class="col">
      <%= f.number_field :price %>円
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      販売ステータス
    </div>
    <div class="col">
      <%= f.radio_button :is_active,true %>販売中
      <%= f.radio_button :is_active,false %>販売停止中
    </div>
  </div>
  <div class="row pt-3">
    <div class="col text-center">
      <%= f.submit"変更を保存" %>
    </div>
  </div>
  <% end %>
</div>


