<h1>商品編集</h1

<%= form_with model: @item do |f| %>

商品画像        <%= f.file_field :image %>
商品名          <%= f.text_field :name %>
商品説明        <%= f.text_area :introduction %>
ジャンル        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
税抜価格        <%= f.number_field :price %>円
販売ステータス  <%= f.radio_button :is_active,true %>販売中
                <%= f.radio_button :is_active,false %>販売停止中
                <%= f.submit"変更を保存" %>

<% end %>
