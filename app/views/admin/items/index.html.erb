
<div class="container">
  
  <div class="row">
    <div class="col-11">
        <h1>商品一覧</h1>
    </div>
    <div class="col-1">
      <%= link_to new_admin_item_path do %>
      <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>購入日時</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.status_text %></td>
        </tbody>
        <% end %>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
