
<h1>商品詳細</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag @item.get_image %>
    </div>
    <div class="col container">
      <div class="row pt-3">
        <div class="col">
          商品名
        </div>
        <div class="col">
          <%= @item.name %>
        </div>
      </div>

      <div class="row pt-3">
        
        <div class="col">
          商品説明
        </div>
        <div class="col">
          <%= @item.introduction %>
        </div>
      </div>
        
      <div class="row pt-3">

        <div class="col">
          ジャンル
        </div>
        <div class="col">
          <%= @item.genre.name %>
        </div>
      </div>
      
      <div class="row pt-3">

        <div class="col">
          税込価格（税抜価格）
        </div>
        <div class="col">
          <%= (@item.price*1.10).floor %>
          (<%= @item.price %>)
        </div>
      </div>
      
      <div class="row pt-3">

        <div class="col">
          販売ステータス
        </div>
        <div class="col">
          <%= @item.status_text %>
        </div>
      </div>
    
      <div class="row pt-3">

        <div class="col text-left">
          <%= link_to  "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>
