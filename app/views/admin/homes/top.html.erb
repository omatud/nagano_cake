<div class="container">
  
  <h1>注文履歴一覧</h1>
  
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        
        <% @order_histories.each do |order_history| %>

        <tbody>
          <td>
            <%= link_to admin_order_history_path(order_history.id) do %>
            <%= order_history.created_at %>
            <% end %>
          </td>
          <td><%= order_history.name %></td>
          <td><%= order_history.order_history_details.sum(:quantity) %></td>
          <td></td>
          
        </tbody>
        
        <% end %>
        
      </table>
    </div>
  </div>
</div>

